<h1>Create a restaurant</h1>

<div>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, collection: Restaurant::CATEGORY %>
    <%= f.input :phone_number %>
    <%= f.submit %>
  <% end %>
</div>

<%= link_to "Back to restaurants list", restaurants_path %>

